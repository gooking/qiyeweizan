.com-name {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.com-name .l {
  font-weight: bold;
  color: #333;
  font-size: 36rpx;
}
.com-name .r {
  color: #999;
  font-size: 26rpx;
}

.content {
  padding: 32rpx;
  color: #333;
  line-height: 64rpx;
}

.notice-icon {
  width: 130rpx;
  height: 33rpx;
  margin-right: 10px;
}

.notice-box {
  width: 100vw;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1rpx solid #efeff4;
}

.notice_swiper {
  height: 88rpx;
  width: 100%;
}

.notice_itemr {
  padding-left: 16rpx;
  font-size: 24rpx;
  overflow: hidden;
  color: #e64340;
}

.swiper-container {
  width: 750rpx;
  height: 375rpx;
  position: relative;
  z-index: 1;
}

.swiper-container .swiper1 {
  width: 750rpx;
  height: 375rpx;
}

.swiper-container .swiper1 image {
  width: 750rpx;
  height: 375rpx;
}
.pop-login {
  width: 80%;
  text-align: center;
  padding: 32rpx;
  color: #444444;
  font-size: 28rpx;
}
.pop-login .d,.c {
  margin-top: 32rpx;
}
.pop-login .b {
  margin-top: 8rpx;
}
.contact {
  display: flex;
  justify-content: space-around;
}
.contact .item {
  width: 40%;
  margin-top: 32rpx;
}
.contact .item2 {
  display: flex;
  align-items: center;
}
.contact .item2 text {
  margin-left: 8rpx;
}
.goodsDynamic {
  position: absolute;
  bottom: 46rpx;
  left: 24rpx;
  width: 668rpx;
  color: #fff;
  font-size: 24rpx;
}

.goodsDynamic .swiper2 {
  width: 100%;
  height: 64rpx;
}

.goodsDynamic-item {
  display: inline-flex;
  align-items: center;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 32rpx;
  padding: 8rpx 16rpx;
}

.goodsDynamic-item image {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.goodsDynamic-item text {
  margin-left: 8rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}